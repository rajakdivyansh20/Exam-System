<meta charset="UTF-8">
<script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
@using Project.Models;
@{ 
    UserModel user = Session["user"] as UserModel;
    double Ts = Convert.ToDouble(Session["totalscore"] );
    

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    #Logo {
        height: auto;
        width: 100px;
        color: black;
        left: 200%;
    }
    #nav {
        background-color: lightgreen;
        text-decoration-color: black;
    }

    .mybtn {
        border-radius: 4px;
        border-color: gold;
        width: 100px;
        color: gold;
        background-color: black;
    }
    .myjumbo{
        background-color:grey;
        color:gold;
    }
    .myaction{
        border:1px solid gold;
        padding:3px;
        color:gold;
        background-color:black;
    }
    .myaction:hover{
        background-color:grey;
        color:white;
    }
    .mylabel {
        text-align: center;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        border-radius: 4px;
        border-color: gold;
        width: 100px;
        color: gold;
        background-color: black;
    }

    .myinput {
        border-color: gold;
        text-decoration-color: gold;
        background-color: cyan;
        color: black;
    }
    .mynavigation{
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size:25px;
        width:auto;
        color:black;
    }
    body {
        background-color: black;
    }
    .blak{
        color:black;
    }
</style>
    
</head>
<body >
    
    <div id ="nav"class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MyScore", "Index", "Home", new { area = "" }, new { @class = "mynavigation" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="blak nav navbar-nav ">
                    @if (user != null)
                    {
                        <li>@Html.ActionLink("Answer", "Index", "Answer")</li>
                        <li>@Html.ActionLink("Check My Score", "CheckScore", "Home")</li>
                        
                        <li id="Logo">

                            <text>@user.Name @Ts % <br />@Html.ActionLink("Logout", "Logout", "Home",new { @class=""}) </text>

                        </li>

                    }
                    </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year My Score</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
